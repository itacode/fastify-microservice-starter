{
  "name": "fastify-microservice-starter",
  "version": "1.0.0",
  "description": "Boilerplate to start developing a microservice with Fastify.",
  "main": "src/server.ts",
  "scripts": {
    "dev": "cross-env PLATFORM=development node --inspect --watch --watch-path=src --import tsx src/server.ts | pino-pretty",
    "start": "cross-env NODE_ENV=production PLATFORM=production node --enable-source-maps dist/server.js",
    "build": "node -e \"require('fs').rmSync('dist', {recursive:true, force:true})\" && tsc",
    "test": "jest --coverage",
    "lint": "eslint src/",
    "format": "prettier --write src/ test/",
    "format:check": "prettier --check src/ test/"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/multipart": "^9.4.0",
    "@fastify/sensible": "^6.0.4",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.7.4",
    "fastify-cli": "^7.4.1",
    "fastify-plugin": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
